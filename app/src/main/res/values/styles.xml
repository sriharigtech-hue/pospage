<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_down</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>

    <style name="MyCustomTextAppearance1" parent="TextAppearance.AppCompat.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>


    <style name="MyCustomTextAppearance2" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>
</resources>