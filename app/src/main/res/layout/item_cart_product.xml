<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_4dp"
    android:layout_marginStart="@dimen/_8dp"
    android:layout_marginEnd="@dimen/_8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8dp"
    app:cardElevation="2dp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_100dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/product_layout"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:padding="@dimen/_1dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:riv_corner_radius="@dimen/_12dp" />

        <RelativeLayout
            android:id="@+id/product_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_toEndOf="@+id/product_image">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:fontFamily="@font/font_semibold"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:padding="@dimen/_2dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                tools:ignore="RtlHardcoded" />


            <LinearLayout
                android:id="@+id/amount_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginEnd="@dimen/_12dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="@dimen/_4dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/demo_amount_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_4dp"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/amount_symbol"
                            android:textColor="@color/gray7A7B7B"
                            android:textSize="@dimen/_12sp"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/demo_product_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4dp"
                            android:layout_marginBottom="@dimen/_4dp"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:textColor="@color/gray7A7B7B"
                            android:textSize="@dimen/_12sp"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/sub_total_amount_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/_4dp"
                            android:fontFamily="@font/new_bold"
                            android:gravity="center"
                            android:text="@string/amount_symbol"
                            android:textColor="@color/_586374"
                            android:textSize="@dimen/_14sp"
                            tools:ignore="RtlHardcoded" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/sub_total_product_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_4dp"
                            android:layout_marginBottom="@dimen/_4dp"
                            android:fontFamily="@font/new_bold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/_586374"
                            android:textSize="@dimen/_14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/offer_amount_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8dp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text="@string/amount_symbol"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18sp"
                    android:visibility="gone"
                    tools:ignore="RtlHardcoded" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/offer_product_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8dp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18sp"
                    android:visibility="gone"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taxTotalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amount_layout"
                android:layout_marginVertical="@dimen/_8dp"
                android:layout_toStartOf="@+id/amountLay1"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/productTaxLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/productTaxTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_medium"
                        android:text="Item Tax"
                        android:textColor="@color/gray494949"
                        android:textSize="@dimen/_12sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:fontFamily="@font/font_medium"
                        android:text=":"
                        android:textColor="@color/gray494949"
                        android:textSize="@dimen/_12sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/productTax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taxTotalLayout"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="@dimen/_8dp"
                android:layout_toStartOf="@+id/amountLay1"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:background="@drawable/outer_curve_border"
                    android:backgroundTint="@color/_4caf50"
                    android:clickable="true"
                    android:fontFamily="@font/font_semibold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_6dp"
                    android:paddingVertical="@dimen/_4dp"
                    android:text=" Add Discount "
                    android:textColor="@color/_4caf50"
                    android:textSize="@dimen/_12sp"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/product_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:fontFamily="@font/font_bold"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_2dp"
                        android:textColor="@color/green4CAF50"
                        android:textSize="@dimen/_12sp"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/removeCoupon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_semibold"
                        android:gravity="start"
                        android:paddingHorizontal="@dimen/_8dp"
                        android:paddingVertical="@dimen/_6dp"
                        android:text="Remove"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sp"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/amountLay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/action_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginVertical="@dimen/_4dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/add_to_bag"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="@dimen/_32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/add_button"
                        android:clickable="true"
                        android:duplicateParentState="true"
                        android:focusable="true"
                        android:fontFamily="@font/font_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingStart="@dimen/_12dp"
                        android:paddingEnd="@dimen/_12dp"
                        android:text="add"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp"
                        tools:ignore="RtlHardcoded" />

                    <!--                                   <!- QUANTITY CONTROL (- 1 +) (hidden by default) -->
                    <LinearLayout
                        android:id="@+id/quantity_layout"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="@dimen/_32dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/outer_curve_border2"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_decrease"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/font_bold"
                            android:clickable="true"
                            android:focusable="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_quantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/font_bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_increase"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/font_bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/delete"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:src="@drawable/delete"
                        android:tint="@color/red" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
