<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_6dp"
            android:paddingVertical="@dimen/_4dp">

            <RelativeLayout
                android:id="@+id/number"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_4dp"
                android:background="@drawable/grad_ciecle"
                android:elevation="4dp"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:fontFamily="@font/font_extra_bold"
                    android:gravity="start|center_vertical"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/number"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/low_stock_alert"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="@dimen/_8dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_4dp"
                    android:layout_marginVertical="@dimen/_4dp"
                    android:src="@drawable/circle_bg"
                    android:visibility="gone"
                    app:tint="@color/f1b505" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:fontFamily="@font/font_semibold"
                    android:gravity="start|center_vertical"
                    android:maxLines="2"
                    android:padding="@dimen/_2dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLayout"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_4dp"
                android:layout_toStartOf="@+id/action_container"
                android:layout_toEndOf="@+id/number"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/product_amount_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/price_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/veg_non"
                                android:layout_width="@dimen/_18dp"
                                android:layout_height="@dimen/_18dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:visibility="gone"
                                tools:ignore="RtlHardcoded" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/demo_amount_symbol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_4dp"
                                        android:fontFamily="@font/font_regular"
                                        android:gravity="center"
                                        android:text="amount_symbol"
                                        android:textColor="@color/gray7A7B7B"
                                        android:textSize="@dimen/_12sp"
                                        android:visibility="gone"
                                        tools:ignore="RtlHardcoded" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/demo_product_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4dp"
                                        android:layout_marginBottom="@dimen/_4dp"
                                        android:fontFamily="@font/font_regular"
                                        android:gravity="center"
                                        android:textColor="@color/gray7A7B7B"
                                        android:textSize="@dimen/_12sp"
                                        android:visibility="gone"
                                        tools:ignore="RtlHardcoded" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/amount_symbol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginBottom="@dimen/_4dp"
                                        android:fontFamily="@font/new_bold"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/_586374"
                                        android:textSize="@dimen/_14sp"
                                        tools:ignore="RtlHardcoded" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/product_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_4dp"
                                        android:layout_marginBottom="@dimen/_4dp"
                                        android:fontFamily="@font/new_bold"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/_586374"
                                        android:textSize="@dimen/_14sp"
                                        tools:ignore="RtlHardcoded" />
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/offer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_4dp"
                                android:fontFamily="@font/font_medium"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/green"
                                android:textSize="@dimen/_12sp"
                                android:visibility="gone"
                                tools:ignore="RtlHardcoded" />

                            <RelativeLayout
                                android:id="@+id/number1"
                                android:layout_width="@dimen/_40dp"
                                android:layout_height="@dimen/_40dp"
                                android:layout_marginTop="@dimen/_4dp"
                                android:layout_marginEnd="@dimen/_6dp"
                                android:background="@drawable/grad_ciecle"
                                android:elevation="4dp"
                                android:visibility="gone">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/product_number1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/_2dp"
                                    android:fontFamily="@font/font_extra_bold"
                                    android:gravity="start|center_vertical"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_18sp"
                                    tools:ignore="RtlHardcoded" />
                            </RelativeLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36dp"
                        android:layout_marginTop="@dimen/_4dp"
                        android:layout_marginBottom="@dimen/_4dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/spinnerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36dp"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/outer_curve_border2"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/amount_spinner"
                                style="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/variation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/outer_curve_border2"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_6dp"
                            android:textAlignment="inherit"
                            android:textAllCaps="true"
                            android:textColor="@color/textBlack"
                            android:textSize="@dimen/_14sp"
                            android:visibility="gone"
                            tools:ignore="RtlSymmetry" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLayout"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/_6dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_to_bag"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/add_button"
                    android:clickable="true"
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:fontFamily="@font/font_bold"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingStart="@dimen/_12dp"
                    android:paddingEnd="@dimen/_12dp"
                    android:text="add"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sp"
                    tools:ignore="RtlHardcoded" />

<!--                                   <!- QUANTITY CONTROL (- 1 +) (hidden by default) -->
                <LinearLayout
                    android:id="@+id/quantity_layout"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_32dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/outer_curve_border2"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_decrease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_bold"
                        android:clickable="true"
                        android:focusable="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_quantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_increase"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_bold"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/out_of_stock"
                    android:layout_width="@dimen/_90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text="out_of_stock"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_10sp"
                    android:visibility="gone"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/action_container"
                android:padding="@dimen/_8dp"
                android:visibility="gone">
                             <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/product_img"
                                    android:layout_width="@dimen/_110dp"
                                    android:layout_height="@dimen/_110dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_4dp"
                                    android:layout_marginEnd="@dimen/_6dp"
                                    android:scaleType="centerCrop"
                                    app:riv_corner_radius="@dimen/_12dp" />"


                <RelativeLayout
                    android:id="@+id/product_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginBottom="@dimen/_2dp"



                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/product_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8dp"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray5D6B82"
                        android:textSize="@dimen/_12sp"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>